@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="login">
    <h1>Welkom !</h1>
    <div class="formFrame">
        <form id="account" method="post">
            <h4>Log in met je gebruikersnaam en passwoord van HOGENT</h4>
            <hr />
            <div class="form-group">
                <input asp-for="Input.Gebruikersnaam" class="form-control" placeholder="Gebruikersnaam" />
                <span asp-validation-for="Input.Gebruikersnaam" class="text-danger"></span>
                <img src="/images/user.png">
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Wachtwoord" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <img src="/images/pass.png">

            </div>
            <div class="form-group">
                <button type="submit" class="btn1">Login</button>
                <img id="btnimg" src="/images/login.png">

            </div>
        </form>
    </div>
</div>
<img src="/images/itlab-logo.png" id="logoITLAB">


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
